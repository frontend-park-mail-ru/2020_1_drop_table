<div class="user-profile">

<div class="user-profile__header">

    <div class="user-profile__header__logo-container">
        <label class="user-profile__header__logo-container_image-picker">
            <img class="user-profile__header__logo-container_image-picker_img" id="image" src={{imgSrc}}/>
            <span class="user-profile__header__logo-container_image-picker_span">Выберите изображение</span>
            <input class="user-profile__header__logo-container_image-picker_input" id="upload" type="file" accept="image/x-png,image/gif,image/jpeg">
        </label>
    </div>
</div>

<div class="user-profile__decorate-container">
    <div class="user-profile__decorate-container__text-field">
        <span class="user-profile__decorate-container__text-field_span">Мой профиль</span>
    </div>
    <div class="user-profile__decorate-container__strip"></div>
</div>

<div class="user-profile__form-container">
    <form class="user-profile__form-container__form-field">
    </form>
</div>
</div>
