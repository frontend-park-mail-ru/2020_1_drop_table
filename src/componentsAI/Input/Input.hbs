
<h4 class="nameField_h4">{{fieldName}}</h4>

{{#if labelData}}
<label class="labelField_label" for={{labelID}}>{{labelData}}</label>

<input class="labelField"{{inputOption}} type={{type}} id={{labelID}} value={{labelText}}>

{{/if}}

{{#if valueData}}
<label class="valueField_label" for={{valueID}}>{{valueData}}</label>

<input class="valueField"{{inputOption}} type={{type}} id={{valueID}} value={{valueText}}>
{{/if}}

{{#if button}}
    <button class="button">
        <i>?</i>
        <span class="button-text">{{button}}</span>
    </button>
{{/if}}

